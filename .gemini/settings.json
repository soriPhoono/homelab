{
  "model": {
    "maxSessionTurns": 100,
    "compressionThreshold": 0.5
  },
  "telemetry": {
    "enabled": true,
    "target": "local",
    "outfile": ".gemini/telemetry.log"
  },
  "output": {
    "format": "text"
  },
  "ui": {
    "showLineNumbers": true,
    "showSpinner": true
  },
  "experimental": {
    "plan": true
  },
  "mcpServers": {
    "github": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server:v0.27.0"
      ],
      "includeTools": [
        "add_issue_comment",
        "issue_read",
        "list_issues",
        "search_issues",
        "create_pull_request",
        "pull_request_read",
        "list_pull_requests",
        "search_pull_requests",
        "create_branch",
        "create_or_update_file",
        "delete_file",
        "fork_repository",
        "get_commit",
        "get_file_contents",
        "list_commits",
        "push_files",
        "search_code"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "terraform": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "TFE_ADDRESS=<<PASTE_TFE_ADDRESS_HERE>>",
        "-e",
        "TFE_TOKEN=<<PASTE_TFE_TOKEN_HERE>>",
        "hashicorp/terraform-mcp-server:0.4.0"
      ]
    },
    "dockerhub": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "HUB_PAT_TOKEN",
        "mcp/dockerhub",
        "--transport=stdio",
        "--username={{dockerhub.username}}"
      ],
      "env": {
        "HUB_PAT_TOKEN": "your_hub_pat_token"
      }
    },
    "nixos": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "ghcr.io/utensils/mcp-nixos"
      ]
    },
    "ast-grep": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "-v",
        ".:/workspace",
        "-w",
        "/workspace",
        "mcp/ast-grep"
      ]
    },
    "filesystem": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "-v",
        ".:/data",
        "node:lts",
        "npx",
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/data"
      ]
    },
    "sequential-thinking": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "node:lts",
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    }
  },
  "tools": {
    "core": [
      "run_shell_command(cat)",
      "run_shell_command(echo)",
      "run_shell_command(grep)",
      "run_shell_command(head)",
      "run_shell_command(tail)"
    ],
    "truncateToolOutputThreshold": 4000000,
    "truncateToolOutputLines": 1000
  }
}